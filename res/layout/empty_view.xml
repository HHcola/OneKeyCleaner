<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_padding_bottom" >

    <ImageView
        android:id="@+id/iv_loading_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@anim/anim_loading"
        android:contentDescription="@string/app_name" />
    
     <TextView
        android:id="@+id/tv_loading_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:text="@string/str_try_best"
        android:textColor="#B6B6B6"
        android:textSize="15dip" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="104dip"
        android:layout_height="30.8dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/btn_refresh_bg"
        android:visibility="gone" />

</LinearLayout>