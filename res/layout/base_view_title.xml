<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="#EE0000"
    android:gravity="center" >
    
   <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/imageview_title_back"
            android:padding="5dp"
            android:text="@string/app_name" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/title_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_banner_search" />

        <ImageView
            android:id="@+id/title_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/app_panel_add_icon" />

        <ImageView
            android:id="@+id/title_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:src="@drawable/btn_banner_filter" />

</LinearLayout>
</RelativeLayout>
